{
	"env": {
		"browser": true,
		// "es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"standard"
	],
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"no-extra-semi": "error",
		"semi": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-tabs": "off",
		"linebreak-style": [
			"error",
			"windows"
		],
		"no-unused-vars": "warn",
		"comma-dangle": [
			"warn",
			"always-multiline"
		]
	}
}